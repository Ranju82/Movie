<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_dark_background"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/unpopularImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="1"
        android:src="@drawable/placeholder"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/unpopularTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Fast and Furious"/>

        <TextView
            android:id="@+id/unpopularOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:lineSpacingExtra="1dp"
            android:ellipsize="end"
            android:maxLength="100"
            android:text="Following the events at home, the Abbott family now face the terrors of the outside world. Forced to venture into the unknown, they realize that the creatures that hunt by sound are not the only threats that lurk beyond the sand path."/>

        <ImageButton
            android:id="@+id/unpopularButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/delete"
            android:layout_gravity="right|bottom"
            android:layout_margin="4dp"/>

    </LinearLayout>
    </LinearLayout>
</FrameLayout>